<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/var_detail_name"
        android:layout_marginTop="24dp"
        android:text="Range : "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/var_detail_lr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/range"
        android:layout_toRightOf="@+id/range"
        android:ems="10"
        android:inputType="number" >
    </EditText>

    <EditText
        android:id="@+id/var_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/var_detail_lr"
        android:layout_alignTop="@+id/name"
        android:ems="10">
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/hyphen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dialogButtonOK"
        android:layout_below="@+id/var_detail_lr"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="21dp"
        android:text=" -- To -- "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/var_detail_ur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/var_detail_lr"
        android:layout_below="@+id/hyphen"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/var_detail_type"
        android:text="Ok/Save" />

    <Button
        android:id="@+id/dialogButtonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/type"
        android:layout_alignParentBottom="true"
        android:text="Cancel" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="72dp"
        android:text="Name : "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/name"
        android:layout_below="@+id/var_detail_ur"
        android:layout_marginTop="33dp"
        android:text="Type : "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/var_detail_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/type"
        android:layout_toRightOf="@+id/range"
        android:ems="10" />

</RelativeLayout>
